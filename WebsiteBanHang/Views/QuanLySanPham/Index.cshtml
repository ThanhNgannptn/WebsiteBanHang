@using WebsiteBanHang.Models;
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>
<div class="card">
    <div class="card-body">
        <p>
            @Html.ActionLink("Thêm mới", "TaoMoi", null, htmlAttributes: new { @class = "btn btn-sm btn-warning font-weight-bold " })
        </p>

        <!-- Form tìm kiếm -->
        <form method="get" action="@Url.Action("Index", "QuanLySanPham")" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm theo tên sản phẩm" value="@Request.QueryString["searchTerm"]" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                </div>
            </div>
        </form>

        <div id="divPartialView">
            @Html.Partial("_IndexPartial", Model)
        </div>
    </div>
</div>
